{
	"extends": "@tsconfig/strictest/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"lib": ["esnext"],
		"module": "esnext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"sourceMap": true,
		"target": "es2021",
		"types": ["bun-types"],
		// leave the following to eslint
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"allowUnreachableCode": true
	},
	"exclude": ["**/node_modules", "./coverage", "./reports", "./dist"],
	"include": ["./src", "./*.ts"]
}
