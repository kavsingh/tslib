{
	"extends": "@tsconfig/node18-strictest/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": false,
		"isolatedModules": true,
		"lib": ["ESNext"],
		"module": "NodeNext",
		"moduleResolution": "Node",
		"noEmit": true,
		"paths": { "~/*": ["./src/*"] },
		"sourceMap": true,
		"target": "ESNext"
	},
	"exclude": ["**/node_modules"],
	"include": ["./src", "./scripts", "./*.ts"]
}
