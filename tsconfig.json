{
	"extends": "@tsconfig/node18-strictest/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": false,
		"isolatedModules": true,
		"lib": ["ESNext"],
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"noEmit": true,
		"paths": { "~/*": ["./src/*"] },
		"sourceMap": true,
		"target": "ESNext"
	},
	"exclude": ["**/node_modules"],
	"include": ["./src", "./*.ts", "./*.mts"],
	"ts-node": {
		"esm": true,
		"transpileOnly": true,
		"compilerOptions": { "target": "ES2020" }
	}
}
