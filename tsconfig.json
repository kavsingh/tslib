{
	"extends": [
		"@tsconfig/strictest/tsconfig.json",
		"@tsconfig/node20/tsconfig.json"
	],
	"compilerOptions": {
		"allowJs": true,
		"noEmit": true,
		"sourceMap": true,
		"types": ["bun-types"],
		// leave the following to eslint
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"allowUnreachableCode": true
	},
	"exclude": ["**/node_modules", "./coverage", "./reports", "./dist"],
	"include": ["./src", "./*.ts"]
}
